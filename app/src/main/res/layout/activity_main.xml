<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tripointeknologi.tsunami_tv.MainActivity">

    <include layout="@layout/fragment_map" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_marker"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/rounded_gradient_button"
            android:text="@string/button_marker"
            android:textColor="@color/hitam" />

        <Button
            android:id="@+id/button_signal"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/rounded_gradient_button"
            android:text="@string/button_signal"
            android:textColor="@color/hitam" /> <!-- Menambahkan textColor -->
    </LinearLayout>

</RelativeLayout>
