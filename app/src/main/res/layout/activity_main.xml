<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tripointeknologi.tsunami_tv.Activities.MainActivity">

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fragment_map_main"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/button_marker"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/custom_marker_button"
            android:fontFamily="@font/poppinsmedium"
            android:paddingStart="50dp"
            android:text="@string/button_marker" />

        <Button
            android:id="@+id/button_signal"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/custom_signal_button"
            android:fontFamily="@font/poppinsmedium"
            android:paddingStart="50dp"
            android:text="@string/button_signal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="5dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:src="@drawable/logo_poliwangi" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:elevation="5dp"
            android:paddingTop="15dp"
            android:paddingBottom="10dp"
            android:src="@drawable/logo_bnpb_" />
    </LinearLayout>

</RelativeLayout>