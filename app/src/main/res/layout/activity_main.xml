<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tripointeknologi.tsunami_tv.MainActivity">

    <Button
        android:id="@+id/button_marklist"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_gradient_button"
        android:text="@string/button_marker"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_signal"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/rounded_gradient_button"
        android:text="@string/button_signal"/>

    <include layout="@layout/activity_map"/>
</androidx.appcompat.widget.LinearLayoutCompat>




