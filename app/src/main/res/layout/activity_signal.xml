<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.tripointeknologi.tsunami_tv.SignalActivity">

    <include layout="@layout/fragment_map" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/button_marker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/title_signal"
                android:text="SIGNAL"
                android:textAlignment="center"
                android:textColor="@color/hitam"
                android:textSize="20dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_gradient_button"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">

            <ListView
                android:id="@+id/list_signal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:dividerHeight="5dp"
                android:background="@drawable/rounded_gradient_button"
                android:listSelector="@drawable/rounded_selector" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="730dp"
            android:layout_marginTop="400dp"
            android:paddingLeft="30dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/rounded_kotak">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_kotak"
                    android:src="@drawable/tanda_home" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_kotak"
                    android:text="Signal aktif"
                    android:textAlignment="center"
                    android:textColor="@color/hitam"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_kotak"
                    android:src="@drawable/tanda_home"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_kotak"
                    android:text="Signal Mati"
                    android:textAlignment="center"
                    android:textColor="@color/hitam"
                    android:textSize="15dp" />
            </LinearLayout>
        </FrameLayout>
    </RelativeLayout>
</RelativeLayout>
